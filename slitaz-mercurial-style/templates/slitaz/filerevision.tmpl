{header}
<title>{repo|escape}: {node|short} {file|escape}</title>
</head>
<body>

<!-- Header -->
<div id="header">
	<div id="logo"></div>
	<div id="network">
		<a href="http://www.slitaz.org/">Home</a>
		<a href="http://scn.slitaz.org/">Community</a>
		<a href="http://doc.slitaz.org/">Doc</a>
		<a href="http://forum.slitaz.org/">Forum</a>
		<a href="http://irc.slitaz.org/">IRC</a>
		<a href="http://pro.slitaz.org/">Pro</a>
		<a href="http://bugs.slitaz.org">Bugs</a>
		<span>Hg</span>
		<a href="http://cook.slitaz.org/">Cook</a>
	</div>
	<h1><a href="http://hg.slitaz.org/">SliTaz Repositories</a></h1>
</div>

<!-- Block -->
<div id="block">
	<!-- Navigation -->
	<div id="block_nav">
		<h4>Navigation</h4>
		<div class="right_box">
			<ul>
				<li><a href="{url}file/{node|short}{path|urlescape}{sessionvars%urlparameter}">Browse</a></li>
				<li>File</li>
				<li><a href="{url}diff/{node|short}/{file|urlescape}{sessionvars%urlparameter}">Diff</a></li>
				<li><a href="{url}annotate/{node|short}/{file|urlescape}{sessionvars%urlparameter}">Annotate</a></li>
				<li><a href="{url}log/{node|short}/{file|urlescape}{sessionvars%urlparameter}">File log</a></li>
				<li><a href="{url}raw-file/{node|short}/{file|urlescape}">Raw</a></li>
			</ul>
		</div>
		<div class="left_box">
			<ul>
				<li><a href="{url}summary{sessionvars%urlparameter}">Summary</a></li>
				<li><a href="{url}log{sessionvars%urlparameter}">Changelog</a></li>
				<li><a href="{url}graph/{node|short}{sessionvars%urlparameter}">Graph</a></li>
				<li><a href="{url}tags{sessionvars%urlparameter}">Tags</a></li>
				<li><a href="{url}branches{sessionvars%urlparameter}">Branches</a></li>
				<li><a href="{url}rev/{node|short}{sessionvars%urlparameter}">Changeset</a></li>
			</ul>
		</div>
	</div>
	<!-- Information/image -->
	<div id="block_info">
		<h4>Project: {repo|escape}</h4>
		<p>
			Clone project: hg clone http://hg.slitaz.org/{repo|escape}
		</p>
		<p>
			Revision option: --rev
		</p>
		<h4>Search</h4>
		<form class="search" action="{url}log">
			{sessionvars%hiddenformentry}
			<p><input name="rev" id="search1" type="text" /></p>
			<!-- <div id="hint">find changesets by author, revision,
			files, or words in the commit message</div> -->
		</form>
	</div>
</div>

<!-- Content -->
<div id="content">

<h2><a href="{url}{sessionvars%urlparameter}">{repo|escape}</a>
	view {file|escape} @ {rev}:{node|short}</h2>

<div class="description">{desc|strip|escape|addbreaks|nonempty}</div>

<table id="changesetEntry">
<tr>
 <th class="author">author</th>
 <td class="author">{author|obfuscate}</td>
</tr>
<tr>
 <th class="date">date</th>
 <td class="date">{date|date} ({date|age} ago)</td>
</tr>
<tr>
 <th class="author">parents</th>
 <td class="author">{parent%filerevparent}</td>
</tr>
<tr>
 <th class="author">children</th>
 <td class="author">{child%filerevchild}</td>
</tr>
{changesettag}
</table>

<div class="overflow">
<div class="sourcefirst"> line source</div>
{text%fileline}
<div class="sourcelast"></div>
</div>

<!-- End of content -->
</div>

{footer}
