{header}
<title>{repo|escape}: {node|short} {path|escape}</title>
</head>
<body>

<!-- Header -->
<div id="header">
	<div id="logo"></div>
	<div id="network">
		<a href="http://www.slitaz.org/">
			<img src="{staticurl}/images/network.png" alt="network.png" /></a>
		<a href="http://scn.slitaz.org/">Community</a>
		<a href="http://doc.slitaz.org/">Doc</a>
		<a href="http://forum.slitaz.org/">Forum</a>
		<a href="http://labs.slitaz.org/issues">Bugs</a>
		<a href="http://hg.slitaz.org/">Hg</a>
	</div>
	<h1><a href="http://hg.slitaz.org/">SliTaz Repositories</a></h1>
</div>

<!-- Block -->
<div id="block">
	<!-- Navigation -->
	<div id="block_nav">
		<h4>Navigation</h4>
		<div class="right_box">
			<ul>
				<li><a href="{url}rev/{node|short}{sessionvars%urlparameter}">Changeset</a></li>
				<li>Browse</li>
			</ul>
		</div>
		<div class="left_box">
			<ul>
				<li><a href="{url}summary{sessionvars%urlparameter}">Summary</a></li>
				<li><a href="{url}log{sessionvars%urlparameter}">Changelog</a></li>
				<li><a href="{url}graph/{node|short}{sessionvars%urlparameter}">Graph</a></li>
				<li><a href="{url}tags{sessionvars%urlparameter}">Tags</a></li>
				<li><a href="{url}branches{sessionvars%urlparameter}">Branches</a></li>
			</ul>
		</div>
	</div>
	<!-- Information/image -->
	<div id="block_info">
		<h4>Project: {repo|escape}</h4>
		<p>
			Clone project: hg clone http://hg.slitaz.org/{repo|escape}
		</p>
		<div id="tarball">
			<ul>
				<li>Download tarball:</li>
				{archives%archiveentry}
			</ul>
		</div>
		<h4>Search</h4>
		<form class="search" action="{url}log">
			{sessionvars%hiddenformentry}
			<p><input name="rev" id="search1" type="text" /></p>
			<!-- <div id="hint">find changesets by author, revision,
			files, or words in the commit message</div> -->
		</form>
	</div>
</div>

<!-- Content -->
<div id="content">

<h2><a href="{url}{sessionvars%urlparameter}">{repo|escape}</a>
	directory {path|escape} @ {rev}:{node|short} {tags%changelogtag}</h2>

<table class="bigtable">
<tr>
  <th class="name">name</th>
  <th class="size">size</th>
  <th class="permissions">permissions</th>
</tr>
<tr class="fileline parity{upparity}">
  <td class="name"><a href="{url}file/{node|short}{up|urlescape}{sessionvars%urlparameter}">[up]</a></td>
  <td class="size"></td>
  <td class="permissions">drwxr-xr-x</td>
</tr>
{dentries%direntry}
{fentries%fileentry}
</table>

<!-- End of content -->
</div>

{footer}
